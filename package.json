{
  "name": "formulafoundry",
  "version": "0.2.0",
  "publishConfig": {
    "tag": "next"
  },
  "description": "Compile spreadsheet formula to JavaScript.",
  "main": "lib/compiler.js",
  "scripts": {
    "build:compiler": "babel src/compiler.js -m commonjs --out-file lib/compiler.js",
    "build:parser": "jison src/parser.jison -m commonjs -o lib/parser.js",
    "build:dist": "browserify ./browserify.js > dist/formulafoundry.js && browserify -g uglifyify ./browserify.js > dist/formulafoundry.min.js",
    "build": "npm run build:parser && npm run build:compiler && npm run build:dist",
    "test": "babel-tape-runner tests/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FormulaPages/formula-compiler.git"
  },
  "keywords": [
    "spreadsheet",
    "formula"
  ],
  "author": "Peter W Moresi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FormulaPages/formula-compiler/issues"
  },
  "homepage": "https://github.com/FormulaPages/formula-compiler#readme",
  "dependencies": {
    "browserify": "^13.0.1",
    "functionfoundry": "^0.10.1",
    "uglifyify": "^3.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.1.2",
    "babel-core": "^6.1.2",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.1.3",
    "babel-preset-es2015": "^6.1.2",
    "babel-tape-runner": "^2.0.1",
    "faucet": "0.0.1",
    "jison": "^0.4.17",
    "tape": "^4.5.1"
  }
}
